"conditions":[
{% for entry in conditions %}
{
  "conditionType":"{{ entry.category[0].coding[0].display | default: 'Problem' }}",
  "conditionStatus": {
  {% if entry.clinicalStatus and entry.clinicalStatus.coding %}
  "codings": [
    {% for coding in entry.clinicalStatus.coding %}
      {
	    {% include '_codableconcept' coding: coding -%}
      },
    {% endfor %}
  ],
  "text": "{{ entry.clinicalStatus.text }}"
  {% endif %}
  },
  "condition": {
    "codings": [
      {% for coding in entry.code.coding %}
      {
	    {% include '_codableconcept' coding: coding -%}
      },
      {% endfor %}
    ],
    "text": "{{ entry.code.text | default: entry.code.coding[0].display }}"
  },
  "effectiveDate": "{{ entry.recordedDate }}",
  {% if entry.onsetDateTime %}
    "onsetDate": "{{ entry.onsetDateTime }}",
  {% elsif entry.onsetPeriod.start %}
    "onsetDate": "{{ entry.onsetPeriod.start }}",
  {% endif %}

  {% if entry.abatementDateTime %}
    "resolutionDate": "{{ entry.abatementDateTime }}"
  {% elsif entry.abatementPeriod.end %}
    "resolutionDate": "{{ entry.abatementPeriod.end }}"
  {% endif %}
  },
{% endfor %}
],
